<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".otp_number">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:clickable="true"
        android:contentDescription="Back Button"
        android:labelFor="@+id/floatingBackButton"
        app:backgroundTint="@color/green"
        app:layout_constraintEnd_toStartOf="@+id/floatingCloseButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24"
        app:tint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingCloseButton"
        android:contentDescription="Close Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        app:backgroundTint="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_close_24"
        app:tint="@color/white" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="160dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        style="@style/custom_card_view_style"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="-34dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Phone Verification"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginStart="20dp"
            android:text="Enter your otp code here"
            android:textColor="@color/gray" />
        <LinearLayout
            android:layout_marginTop="108dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <EditText
                android:id="@+id/otpcode1"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/warna_bg_button"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/otpcode2"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/warna_bg_button"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="116dp"
                tools:layout_editor_absoluteY="119dp" />

            <EditText
                android:id="@+id/otpcode3"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:background="@drawable/warna_bg_button"
                android:gravity="center"
                android:inputType="number"
                android:layout_marginRight="10dp"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="207dp"
                tools:layout_editor_absoluteY="119dp" />

            <EditText
                android:id="@+id/otpcode4"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:background="@drawable/warna_bg_button"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                tools:layout_editor_absoluteX="294dp"
                tools:layout_editor_absoluteY="119dp" />
        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="320dp"
            android:layout_marginTop="200dp"
            android:clickable="true"
            android:contentDescription="Back Button"
            android:labelFor="@+id/floatingBackButton"
            app:backgroundTint="@color/green"
            app:layout_constraintEnd_toStartOf="@+id/floatingCloseButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_navigate_next_24"
            app:tint="@color/white" />

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>